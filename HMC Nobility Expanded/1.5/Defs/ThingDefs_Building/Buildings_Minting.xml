<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="WorkTable">
        <defName>TableMinting</defName>
        <label>minting workbench</label>
        <description>A coin minting press is a machine designed to produce coins by imprinting images onto metal blanks. It uses pressure generated by a mechanical or hydraulic drive to press the die against the blank.</description>
        <drawerType>MapMeshAndRealTime</drawerType>
        <graphicData>
            <texPath>Things/Building/Production/Minting/TableMintingPress</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>
            <drawSize>(2.1, 2.1)</drawSize>
            <shadowData>
                <volume>(0.67, 1.0, 0.8)</volume>
                <offset>(0,0,0)</offset>
            </shadowData>
            <damageData>
                <cornerTL>Damage/Corner</cornerTL>
                <cornerTR>Damage/Corner</cornerTR>
                <cornerBL>Damage/Corner</cornerBL>
                <cornerBR>Damage/Corner</cornerBR>
            </damageData>
        </graphicData>
        <costList>
            <ComponentMedieval>6</ComponentMedieval>
			<ComponentIndustrial>4</ComponentIndustrial>
            <ElectronicComponents>2</ElectronicComponents>
            <Mechanism>5</Mechanism>
        </costList>
        <stuffCategories>
            <li>RuggedMetallic</li>
        </stuffCategories>
        <costStuffCount>150</costStuffCount>
        <minifiedDef>MinifiedThing</minifiedDef>
        <thingCategories>
            <li>BuildingsProduction</li>
        </thingCategories>
        <statBases>
            <WorkToBuild>4500</WorkToBuild>
            <MaxHitPoints>300</MaxHitPoints>
            <Flammability>0</Flammability>
            <Cleanliness>-5</Cleanliness>
            <Mass>200</Mass>
        </statBases>
        <size>(1,1)</size>
        <designationCategory>Production</designationCategory>
        <interactionCellOffset>(0,0,-1)</interactionCellOffset>
        <building>
            <uninstallWork>1250</uninstallWork>
            <unpoweredWorkTableWorkSpeedFactor>0.3</unpoweredWorkTableWorkSpeedFactor>
        </building>
        <comps>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <shortCircuitInRain>true</shortCircuitInRain>
                <basePowerConsumption>300</basePowerConsumption>
            </li>
            <li Class="CompProperties_Refuelable">
                <fuelConsumptionRate>1</fuelConsumptionRate>
                <fuelCapacity>1.0</fuelCapacity>
                <fuelFilter>
                    <thingDefs>
                        <li>CoinMintingDie</li>
                    </thingDefs>
                </fuelFilter>
                <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
                <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
            </li>
            <li Class="CompProperties_Flickable"/>
            <li Class="CompProperties_AffectedByFacilities">
                <linkableFacilities>
                    <li>Small_ToolCabinet</li>
                    <li>PodChair</li>
                    <li>Patterner</li>
                </linkableFacilities>
            </li>
            <li Class="CompProperties_Breakdownable"/>
            <li Class="SK.CompProperties_LowIdleDraw">
                <compClass>SK.CompPowerLowIdleDraw</compClass>
                <idlePowerFactor>0.1</idlePowerFactor>
            </li>
        </comps>
        <designationHotKey>Misc2</designationHotKey>
        <placeWorkers>
            <li>PlaceWorker_ShowFacilitiesConnections</li>
            <li>PlaceWorker_ReportWorkSpeedPenalties</li>
        </placeWorkers>
        <researchPrerequisites>
            <li>Craft_B1</li> <!--special research?-->
        </researchPrerequisites>
        <constructionSkillPrerequisite>7</constructionSkillPrerequisite>
    </ThingDef>

